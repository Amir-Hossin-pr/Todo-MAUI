
<MudItem  xs="12">
    <MudCard Outlined="true" Class="rounded-lg mud-elevation-1">
        <MudCardContent>
            <MudText>@Title</MudText>
            <MudText Typo="Typo.body2">@Text</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Warning" StartIcon="@Icons.Material.Filled.Edit">ویرایش</MudButton>
            <MudSpacer/>
            <MudButton Variant="Variant.Filled" Color="Color.Error" StartIcon="@Icons.Material.Filled.Delete">حذف</MudButton>
        </MudCardActions>
    </MudCard>
</MudItem>

@code {
    [Parameter] public string Title { get; set; }

    [Parameter] public string Text { get; set; }

    [Parameter] public int Id { get; set; }

    void DeleteItem()
    {

    }
}
